<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetugasDrainIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryPetugas</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryPetugas</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Text View-->
    <style name="TextView.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextView.Regular" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!--Edit Text-->
    <style name="EditText">
        <item name="android:background">@drawable/bg_edittext_rounded</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:paddingTop">@dimen/dimen2x</item>
        <item name="android:paddingBottom">@dimen/dimen2x</item>
        <item name="android:paddingLeft">@dimen/dimen5x</item>
        <item name="android:paddingRight">@dimen/dimen5x</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Bold.Petugas" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Medium.Petugas" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Regular.Petugas" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Petugas" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="backgroundTint">@color/primaryPetugas</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Pengaduan.Active" parent="Widget.AppCompat.Button">
        <item name="background">@color/primaryPetugas</item>
    </style>

    <style name="Button.Pengaduan.Pasive" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>